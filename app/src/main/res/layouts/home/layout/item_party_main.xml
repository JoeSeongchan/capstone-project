<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/homePartyItem_ll_root"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/homePartyItem_rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/homePartyItem_tv_partyName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:padding="8dp"
          android:text="아이유 노래 좋아하는 사람~"
          android:textSize="25sp" />

        <TextView
            android:id="@+id/homePartyItem_tv_karaokeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homePartyItem_tv_partyName"
            android:text="흑석동"
            android:textSize="20sp"
            android:padding="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/homePartyItem_tv_timeWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homePartyItem_tv_karaokeName"
            android:layout_toRightOf="@id/homePartyItem_tv_memberInfo"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/homePartyItem_tv_timeWarning"
            android:textColor="#ffff0000"
            android:textSize="15sp" />

        <TextView
          android:id="@+id/homePartyItem_tv_startDateTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/homePartyItem_tv_partyName"
          android:layout_toRightOf="@id/homePartyItem_tv_karaokeName"
          android:gravity="center"
          android:padding="8dp"
          android:text="@string/homePartyItem_tv_startDateTime"
          android:textColor='#0054FF'
          android:textSize="20sp" />

        <TextView
            android:id="@+id/homePartyItem_tv_memberInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homePartyItem_tv_karaokeName"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/homePartyItem_tv_memberInfo"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>