<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="20dp">

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchParty_til_groupTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="5"
        app:counterEnabled="true"
        app:counterMaxLength="10">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/searchParty_et_groupTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="검색어를 입력하세요"
          tools:ignore="TouchTargetSizeCheck" />
      </com.google.android.material.textfield.TextInputLayout>

    </TableRow>

  </TableLayout>

  <View
    android:id="@+id/divider9"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/listDivider" />

  <TextView
    android:id="@+id/textView23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="참가조건" />

  <View
    android:id="@+id/divider10"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/listDivider" />

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="성별" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genderFree"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="성별 자유" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genderMale"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:text="남자만" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genderFemale"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:text="여자만" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/searchParty_tv_age"
        style="?android:borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="나이 자유"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

      <ImageButton
        android:id="@+id/searchParty_btn_ageLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/arrow_left"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

      <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="나이대"
        android:textAlignment="center" />

      <ImageButton
        android:id="@+id/searchParty_btn_ageRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/arrow_right"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.widget.Button
        android:id="@+id/searchParty_btn_ageEarly"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_column="1"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:text="초반\n(0~3)" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_ageMid"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:text="중반\n(4~6)" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_ageLate"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:text="후반\n(7~9)" />
    </TableRow>

  </TableLayout>

  <TextView
    android:id="@+id/textView24"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:text="선호 장르" />

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreFree"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="자유롭게"
        android:textColor="@color/black" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreTop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="인기차트" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreBalad"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:text="발라드" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreNormalSong"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:text="가요" />

    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.widget.Button
        android:id="@+id/searchParty_btn_genrePop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:text="POP" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreOldSong"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:text="트로트" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreHiphop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:text="힙합" />

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreJpop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:text="J-POP" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.widget.Button
        android:id="@+id/searchParty_btn_genreOther"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:background="@drawable/selector_button"
        android:text="그 외" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </TableLayout>

  <ImageButton
    android:id="@+id/searchParty_btn_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:srcCompat="@drawable/search_icon"
    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

  <TextView
    android:id="@+id/searchParty_tv_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=""
    android:textAlignment="center" />

</LinearLayout>