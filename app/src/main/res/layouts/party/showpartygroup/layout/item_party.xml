<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/partyItem_ll_root"
  android:layout_width="match_parent"
  android:layout_height="150dp"
  android:layout_margin="4dp"
  app:cardCornerRadius="4dp">

  <RelativeLayout
    android:id="@+id/partyItem_rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/partyItem_tv_partyName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="8dp"
      android:text="아이유 노래 좋아하는 사람~"
      android:textSize="25sp" />

    <TextView
      android:id="@+id/partyItem_tv_karaokeName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/partyItem_tv_partyName"
      android:gravity="center"
      android:padding="8dp"
      android:text="흑석동"
      android:textSize="20sp" />

    <TextView
      android:id="@+id/partyItem_tv_startDateTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/partyItem_tv_partyName"
      android:layout_toRightOf="@id/partyItem_tv_karaokeName"
      android:gravity="center"
      android:padding="8dp"
      android:text="@string/partyItem_tv_startDateTime"
      android:textColor='#0054FF'
      android:textSize="20sp" />

    <TextView
      android:id="@+id/partyItem_tv_memberInfo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/partyItem_tv_karaokeName"
      android:gravity="center"
      android:padding="8dp"
      android:text="@string/partyItem_tv_memberInfo"
      android:textSize="20dp" />

  </RelativeLayout>

</androidx.cardview.widget.CardView>