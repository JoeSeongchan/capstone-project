<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/showKaraokeInfo_ll_container"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/showKaraokeInfo_tv_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextView"
      android:textSize="28sp" />

    <TextView
      android:id="@+id/showKaraokeInfo_tv_phone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextView" />

    <!--    //지번주소-->
    <TextView
      android:id="@+id/showKaraokeInfo_tv_address1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextView" />

    <!--    //도로명주소-->
    <TextView
      android:id="@+id/showKaraokeInfo_tv_address2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextView" />


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <Button
        android:id="@+id/showKaraokeInfo_btn_createParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:text="모임 생성" />

      <Button
        android:id="@+id/showKaraokeInfo_btn_showPartyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 리스트 확인" />
    </LinearLayout>
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>