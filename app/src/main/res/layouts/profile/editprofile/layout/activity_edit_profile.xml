<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/ScrollView1"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageButton
      android:id="@+id/editProfile_btn_changeLocal"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="240dp"
      android:background="@drawable/edit_profile_view_background"
      android:textColor="#333333"
      android:textSize="25sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/editProfile_btn_changeLocal"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="10dp"
      android:text="활동지역 변경 ..."
      android:textColor="#333333"
      android:textSize="25sp" />

    <ImageButton
      android:id="@+id/editProfile_btn_changeGenre"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_below="@id/editProfile_btn_changeLocal"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
      android:background="@drawable/edit_profile_view_background"
      android:textColor="#333333"
      android:textSize="25sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/editProfile_btn_changeGenre"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="10dp"
      android:text="선호 장르 변경 ..."
      android:textColor="#333333"
      android:textSize="25sp" />
  </RelativeLayout>


</ScrollView>


