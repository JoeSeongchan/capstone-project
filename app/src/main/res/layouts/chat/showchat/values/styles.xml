<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ll_oneItem_chat">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_marginStart">10dp</item>
    <item name="android:layout_marginEnd">10dp</item>
  </style>

  <style name="tv_nickName_chat">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">5dp</item>
    <item name="android:fontFamily">@font/bold_font</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="tv_msg_chat">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:autoLink">web|email|phone</item>
    <item name="android:ellipsize">end</item>
    <item name="android:fontFamily">@font/normal_font</item>
    <item name="android:maxLines">7</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:textColor">@color/whiteTextColor</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="tv_date_chat" parent="Widget.AppCompat.TextView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:inputType">textMultiLine</item>
  </style>

  <style name="ll_subItem_chat">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="btn_fullText_elChat">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">12sp</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:background">@color/my_chat_color</item>
    <item name="android:gravity">bottom</item>
    <item name="android:padding">0dp</item>
    <item name="android:textColor">@color/chat_gray_color</item>
    <item name="android:textSize">11sp</item>
    <item name="android:textStyle">bold</item>
  </style>
</resources>