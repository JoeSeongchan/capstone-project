<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/constraintLayout_chatRoom"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginHorizontal="10dp"
  android:layout_marginTop="5dp"
  app:layout_constraintLeft_toLeftOf="parent"
  app:layout_constraintRight_toRightOf="parent">

  <TextView
    android:id="@+id/tv_groupTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:text="이름"
    android:textColor="@color/blackTextColor"
    android:textSize="40sp"
    android:textStyle="bold"
    android:transitionName="name"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_currentMsg_chatGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:text="최근 메시지."
    app:layout_constraintBottom_toBottomOf="@id/tv_groupTitle"
    app:layout_constraintLeft_toRightOf="@id/tv_groupTitle" />

  <TextView
    android:id="@+id/tv_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginRight="28dp"
    android:text="날짜"
    android:textColor="@color/blackTextColor"
    android:textSize="18sp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/tv_groupTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
