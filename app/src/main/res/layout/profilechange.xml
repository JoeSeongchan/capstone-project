<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-230dp"
            android:background="@drawable/usernameback"
            android:text="\n나이: 32\n성별: 남"
            android:textColor="#333333"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/local"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:background="@drawable/usernameback"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/localname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/local"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="활동지역 변경 ..."
            android:textColor="#333333"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/local"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/usernameback"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/genrename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/genre"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="선호 장르 변경 ..."
            android:textColor="#333333"
            android:textSize="25sp" />



        <TextView
            android:id="@+id/profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile"
            android:layout_centerHorizontal="true"
            android:text="Profile"
            android:textColor="#333333"
            android:textSize="30sp" />



        <TextView
            android:id="@+id/favoritesongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/usernameback"
            android:text="\n1:릴보이 - CREDIT\n2:릴보이 - 내일이 오면\n3:\n4:\n5:\n...추가하기"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/favoritesongsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/favoritesongs"
            android:layout_centerHorizontal="true"
            android:text="Favorite Songs"
            android:textColor="#333333"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/samplevoices"
            android:layout_width="406dp"
            android:layout_height="80dp"
            android:layout_below="@id/favoritesongs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/usernameback"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/samplevoicetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/samplevoices"
            android:layout_alignTop="@id/samplevoices"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="샘플 보이스 더 듣기"
            android:textColor="#333333"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/seemore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/samplevoices"
            android:layout_alignBottom="@id/samplevoices"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:text="더보기"
            android:textColor="#333333"
            android:textSize="20sp" />


    </RelativeLayout>


</ScrollView>


