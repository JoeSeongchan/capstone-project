<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/moim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moimtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유 노래 좋아하는 사람~"
            android:textSize="25dp"
            android:padding="8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/moimlocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moimtitle"
            android:gravity="center"
            android:padding="8dp"
            android:text="흑석동"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/moimtimeattack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moimlocal"
            android:layout_toRightOf="@id/moimmembers"
            android:gravity="center"
            android:padding="8dp"
            android:text="※30분 이후 모집마감"
            android:textColor="#ffff0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/moimstarttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moimtitle"
            android:layout_toRightOf="@id/moimlocal"
            android:gravity="center"
            android:padding="8dp"
            android:text="11월25일 15:00"
            android:textColor='#0054FF'
            android:textSize="20dp" />

        <TextView
            android:id="@+id/moimmembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moimlocal"
            android:gravity="center"
            android:padding="8dp"
            android:text="인원 : 3/5"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>